{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "version": "0.1.0",
  "name": "hamflow",
  "title": "HamFlow",
  "description": "Manage your HamFlow tasks, agenda, and productivity from Raycast",
  "icon": "command-icon.png",
  "author": "tanyawat_vittayapalotai_p",
  "categories": [
    "Productivity"
  ],
  "owner": "hamproductions",
  "license": "MIT",
  "commands": [
    {
      "name": "ai-command",
      "title": "AI Command",
      "subtitle": "HamFlow",
      "description": "Create tasks and reminders using natural language",
      "mode": "view",
      "arguments": [
        {
          "name": "command",
          "type": "text",
          "placeholder": "e.g., deploy staging tomorrow",
          "required": false
        }
      ],
      "keywords": [
        "ai",
        "create",
        "task",
        "reminder",
        "todo"
      ]
    },
    {
      "name": "view-agenda",
      "title": "Today's Agenda",
      "subtitle": "HamFlow",
      "description": "View today's tasks and habits",
      "mode": "view",
      "keywords": [
        "agenda",
        "today",
        "tasks",
        "habits",
        "schedule"
      ]
    },
    {
      "name": "quick-add",
      "title": "Quick Add Task",
      "subtitle": "HamFlow",
      "description": "Quickly add a new task",
      "mode": "view",
      "arguments": [
        {
          "name": "title",
          "type": "text",
          "placeholder": "Task title",
          "required": false
        }
      ],
      "keywords": [
        "quick",
        "add",
        "task",
        "create",
        "new",
        "todo"
      ]
    },
    {
      "name": "view-tasks",
      "title": "View All Tasks",
      "subtitle": "HamFlow",
      "description": "Browse and manage all your tasks",
      "mode": "view",
      "keywords": [
        "tasks",
        "all",
        "browse",
        "search",
        "filter"
      ]
    }
  ],
  "preferences": [
    {
      "name": "serverUrl",
      "type": "textfield",
      "required": true,
      "title": "Server URL",
      "description": "Your HamFlow instance URL",
      "default": "http://localhost:3000",
      "placeholder": "http://localhost:3000"
    },
    {
      "name": "apiToken",
      "type": "password",
      "required": true,
      "title": "API Token",
      "description": "Your HamFlow API token from Settings",
      "placeholder": "Enter your API token"
    },
    {
      "name": "defaultSpace",
      "type": "dropdown",
      "required": false,
      "title": "Default Space",
      "description": "Default space for new tasks",
      "default": "work",
      "data": [
        {
          "title": "Work",
          "value": "work"
        },
        {
          "title": "Personal",
          "value": "personal"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.5",
    "@raycast/utils": "^2.2.1",
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.1.1",
    "@types/node": "~24.9.2",
    "@types/react": "^19.2.2",
    "eslint": "^9.38.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "ray build -e dist -o dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
