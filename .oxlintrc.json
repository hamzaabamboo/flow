{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "categories": {
    "correctness": "error",
    "suspicious": "error",
    "perf": "error"
  },
  "settings": {
    "jsx-a11y": {
      "polymorphicPropName": "as",
      "components": {
        "Button": "button",
        "IconButton": "button",
        "Input": "input",
        "Text": "p"
      }
    }
  },
  "plugins": ["typescript", "react", "import", "jsx-a11y", "unicorn", "promise"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "@typescript-eslint/no-deprecated": "error"
  }
}
